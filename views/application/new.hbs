<!DOCTYPE html>
<html lang="en">

{{> head}}

<body>

  <div id="wrapper">

    {{> navbar}}

    {{> sidenav}}

    <div id="page-wrapper">
      <div class="row">
        <div class="col-lg-12">
          <h1 class="page-header">New Application</h1>
        </div>
        <!-- /.col-lg-12 -->
      </div>
      <!-- /.row -->
      <div class="row">
        <div class="col-lg-12">
          {{#if success_message}}
						<div class="alert alert-success">
							{{success_message}}
						</div>
					{{/if}}
					{{#if warning_message}}
						<div class="alert alert-warning">
							{{warning_message}}
						</div>
					{{/if}}
					{{#if error_message}}
						<div class="alert alert-danger">
							{{error_message}}
						</div>
					{{/if}}
          <div class="panel panel-default">
            <div class="panel-body">
              <div class="row">
                <div class="col-lg-6">
                  <form action="/application/action/save" role="form" method="post"  >
                    <input name="id" type="hidden" value="{{application.id}}" />
                    <div class="form-group">
                      <label>Name</label>
                      <input name="name" class="form-control" placeholder="Enter text" value="{{application.name}}"  />
                    </div>
                    <div class="form-group">
                      <label>Description</label>
                      <input name="description" class="form-control" placeholder="Enter text" value="{{application.description}}" />
                    </div>
                    <div class="form-group">
                     <label for="sel1">Select type:</label>
                     <select name="type"  class="form-control">
                       {{#select application.type}}
                         <option value="S" >Simple</option>
                         <option value="D" >Docker</option>
                       {{/select}}
                     </select>
                   </div>
                    <button type="submit" class="btn btn-outline btn-primary">Submit</button>
                    <a href="/" type="button" class="btn btn-outline btn-primary">Cancel</a>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    {{> scripts}}

</body>

</html>
